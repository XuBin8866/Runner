/* pages/activity_detail/activity_detail.wxss */

.container {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.content {
  margin-top: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgba(221, 221, 221, 0.425);
  border-width: 0rpx;
  border: 1rpx solid rgba(150, 150, 150, 0.336);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.content-images {
  /* width: 250rpx; */
  width: 240rpx;
  height: 180rpx;
  margin-left: 15rpx;
  margin-top: 20rpx;
  border: 3rpx solid #ddd;
  border-radius: 10rpx;
}

.content-images image {
  width: 100%;
  height: 100%;
}

.content-text {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  margin-top: 15rpx;
  width: 60%;
}

.content-text-title {
  font-size: 11pt;
  font-weight: bolder;
  margin-bottom: 5rpx;
}

.content-text-detail {
  margin-top: 10rpx;
  font-size: 25rpx;
  color: rgb(173, 170, 170);
}

.content-info {
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  color: rgb(173, 170, 170);
  margin: 20rpx;
  width: 100%;
}

.content-info-number {
  margin: 20rpx;
}

.content-info-if {
  margin-left: 20rpx;
}

.content-info-time {
  display: flex;
  flex-direction: column;
  margin: 20rpx;
}

.line {
  margin-top: 20rpx;
  width: 100%rpx;
  height: 2rpx;
  background: rgb(173, 170, 170);
}

.state {
  margin-top: 50rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgba(221, 221, 221, 0.425);
  border-width: 0rpx;
  border: 1rpx solid rgba(150, 150, 150, 0.336);
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.state-title {
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
}

.line2 {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  width: 100%rpx;
  height: 2rpx;
  background: rgb(173, 170, 170);
}

.state-symbol {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.state-symbol-item {
  width: 30%;
  height: 50rpx;
  margin: 10rpx;
  display: flex;
  justify-content: center;
}

.details {
  margin-top: 50rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 5rpx 5rpx rgba(221, 221, 221, 0.425);
  border-width: 0rpx;
  border: 1rpx solid rgba(150, 150, 150, 0.336);
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.details-title {
  margin-left: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
}

.details-info {
  margin: 20rpx;
  font-size: 9pt;
  color: #353535;
}
.signbtn{
  margin: 20rpx;
}
