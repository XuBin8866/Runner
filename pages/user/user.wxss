/* 页面布局 */
page{
  background-color:#ffffff;

}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.myPerson{
  width: 100%;
  height: 173rpx;
  display: flex;
  flex-direction: row;
  margin-top: 25rpx;
  border-bottom: 5px solid #ddd;
}
.name{
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.myPicture{
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  margin-left: 38rpx;
}
.step{
  margin-top: 12rpx;
}
.myText{
  font-family: Arial, Verdana, sans-serif;
  font-size: 40rpx;
}


.action{
  width:150rpx;
  height: 150rpx;
  background: rgba(239, 237, 240, 0.808);
}
.action1{
  display: flex;
  justify-content: space-around;
  margin-top: 15rpx;
  margin-bottom: 12rpx;
}
.action2{
  width: 100%;
  height: 70rpx;
  border-left-width: 7rpx;
  border-left-style: solid;
  border-left-color: #7CFC00;
}
.action3{
  margin-top: 30rpx;
  border-bottom: 5px solid #ddd;
}
.acText{
  margin-left: 18rpx;
  font-size: 125%; 
}

.inter{
  width: 92%;
  height: 40rpx;
  margin-left: 30rpx;
  display: flex; 
  justify-content: space-between;
}
.inter1{
  width: 100%;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  position: relative;
}
.inter3{
  margin-top: 22rpx;
  border-bottom: 5px solid #ddd;
}

.report{
    width: 100%;
    height: 165rpx;
    margin-left: 30rpx;
    display: flex; 
    flex-direction: column;
    justify-content: space-around;
}
.report2{
  border-bottom: 5px solid #ddd;
}

.markPicture{
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  margin-left: 50rpx;
}
.mark{
  display: flex;
  justify-content: space-between;
}
.myButton{
  border-radius: 50%;
}