.container {
  width: 100%;
}

.top-swiper {
  margin-top: 5px;
}

.swiper-item image{
  width: 100%
}

.selection {
  border-bottom: 5px solid #ddd;
}

.header {
  border-left-width: 3px;
  border-left-style: solid;
  border-left-color: limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  width: 94%;
  padding-left: 3%;
  padding-right: 3%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.content {
  height: 200rpx;
  margin: 10rpx;
  border: 5rpx solid rgba(221, 221, 221, 0.733);

  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  border-radius: 10rpx
  
}

.content-text{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  margin-top: 15rpx;
  width: 60%
}
.content-text-title{
  font-size: 30rpx;
  margin-bottom: 5rpx
}
.content-text-detail{
  margin-top: 10rpx;
  font-size: 25rpx;
  color: rgb(173, 170, 170)
}
.content-images{
  width: 250rpx;
  height: 180rpx;

  margin-top: 8rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 5px

}
.content-images image{
  width: 100%;
  height: 100%
}

.content-item image {
  width: 100%;
  height: 100%;
}

.content-item-text {
  position: absolute;
  bottom: 0px; /*通过以上一个父类view为坐标进行绝对布局，使文字在view的底部 而不是image被挤下去*/
  color: white;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom, rgb(0, 0, 0, 0.8), rgba(212, 212, 212, 0.801));
  height: 10px;
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 1%;
}

.list-item {
  height: 500rpx;
  margin: 20rpx;
  margin-bottom: 40rpx;
  
 border-style: solid;
 box-shadow:10rpx 50rpx 50rpx 50rpx #DDDDDD;
 border-width: 0rpx;
}

.list-item-images {
  height: 300rpx;
  width: 100%;
  position: relative;
}

.list-item-images-img {
  width: 100%;
  height: 100%;
}

.list-item-images-icons {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -25px;
  right: 25px;
}

.list-item-images-icons image {
  width: 100%;
  height: 100%;
}

.list-item-text {
  height: 200rpx;
  width: 96%;
  background-color: white;
  margin-top: 10px;
  padding: 0;
  padding-left: 2%;
  padding-right: 2%;
}

.list-item-text-title {
}

.list-item-text-content {
  font-size: 10px;
  color: #999;
  margin-top: 10px;
  border-bottom: 5px solid #ddd;
 
 
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  align-content: center;
}
