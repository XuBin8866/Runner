/* pages/activities/activities.wxss */
.content {
  height: 200rpx;
  margin: 10rpx;
  border: 5rpx solid rgba(221, 221, 221, 0.733);

  display: flex;
  flex-direction: column;
  flex-wrap: wrap;

  border-radius: 10rpx;
  
}
.fornav{
  width: 100%;
  height: 100%;
}
.content-text{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
  margin-top: 15rpx;
  width: 60%
}
.content-text-title{
  font-size: 30rpx;
  margin-bottom: 5rpx
}
.content-text-detail{
  margin-top: 10rpx;
  font-size: 25rpx;
  color: rgb(173, 170, 170)
}
.content-images{
  width: 250rpx;
  height: 180rpx;

  margin-top: 8rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 5px;
  

}
.content-images image{
  width: 100%;
  height: 100%
}