/* pages/papers/papers.wxss */
.list-item {
  height: 650rpx;
  margin: 20rpx;
  margin-bottom: 40rpx;
  
 border-style: solid;
 box-shadow:10rpx 50rpx 50rpx 50rpx #DDDDDD;
 border-width: 0rpx;
}

.list-item-images {
  height: 300rpx;
  width: 100%;
  position: relative;
}

.list-item-images-img {
  width: 100%;
  height: 100%;
}


.list-item-text {
  height: 200rpx;
  width: 96%;
  background-color: white;
  margin-top: 10px;
  padding: 0;
  padding-left: 2%;
  padding-right: 2%;
}

.list-item-text-title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.list-item-text-content {
  font-size: 10px;
  color: #999;
  margin-top: 10px;
  border-bottom: 5px solid #ddd;
 
 
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  align-content: center;
}
.list-item-text-content text{
  width:100%;
  height: 100%
}
